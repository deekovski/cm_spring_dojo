<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="fuService" factory-method="createInstance" class = "cm.ps.springdojo.service.FooService">
        <constructor-arg type="java.lang.String" value="message"/>
    </bean>


    <bean name="prototypeBean" factory-method="createInstance" class="cm.ps.springdojo.model.PrototypeBean">
        <constructor-arg type="java.lang.String" value="message"/>
    </bean>
</beans>